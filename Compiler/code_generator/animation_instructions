module AnimationInstructions

  class ObjectInstruction
    attr_accessor :identifier,:path

    def initialize file, identifier, path
      @identifier = identifier
      @path = path
      write(file)
    end

    def write file

    end
  end

  class Instruction
    attr_accessor :time, :identifier, :parameters

    def initialize file, time, identifier, parameters
      @time = time
      @identifier = identifier
      @parameters = parameters
      write(file)
    end

    def write file
      raise 'abstract method'
    end
  end


  class MoveInstruction < Instruction

    def initialize time, identifiers, parameters
      super(time, identifiers, parameters)
    end

    def write file

    end
  end
end